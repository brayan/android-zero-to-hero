<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="1dp"
    android:background="@android:color/white"
    android:minHeight="64dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/exercise_history__tv__date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ellipsize="end"
        android:gravity="end"
        android:paddingRight="16dp"
        android:textColor="@color/default_background"
        android:textSize="@dimen/text_size_xxsmall"
        android:textStyle="bold"
        tools:text="25/04/2017"/>

    <LinearLayout
        android:paddingTop="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="18dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/exercise_history__tv__weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/md_orange_300"
                android:textSize="@dimen/text_size_small"
                tools:text="30kg"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/exercise_history__tv__sets"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/md_blue_grey_300"
                android:textSize="@dimen/text_size_small"
                tools:text="3 sets"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/exercise_history__tv__reps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/md_blue_grey_300"
                android:textSize="@dimen/text_size_small"
                tools:text="3 reps"/>


        </LinearLayout>

    </LinearLayout>

</LinearLayout>