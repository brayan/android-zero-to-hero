<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/exercise__ll__weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/exercise__tv__weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:textColor="@color/md_light_blue_300"
            android:textSize="@dimen/text_size_xxxxlarge"
            tools:text="30"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:fontFamily="sans-serif-light"
            android:text="kg"
            android:textColor="@color/md_light_blue_300"
            android:textSize="@dimen/text_size_xlarge"/>

    </LinearLayout>


    <TextView
        android:id="@+id/exercise__tv__name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/exercise__ll__weight"
        android:ellipsize="end"
        android:maxLines="3"
        android:textColor="@color/md_blue_grey_700"
        android:textSize="@dimen/text_size_small"
        tools:text="Rosca Scott"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/exercise__tv__name"
        android:layout_toLeftOf="@id/exercise__ll__weight"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/exercise__tv__sets"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/md_blue_grey_300"
                android:textSize="@dimen/text_size_small"
                tools:text="3 sets"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/exercise__tv__reps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/md_blue_grey_300"
                android:textSize="@dimen/text_size_small"
                tools:text="3 reps"/>


        </LinearLayout>

    </LinearLayout>

</RelativeLayout>